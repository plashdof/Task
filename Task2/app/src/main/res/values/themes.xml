<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/netflix_black</item>
        <item name="colorPrimaryVariant">@color/netflix_black</item>
        <item name="colorOnPrimary">@color/netflix_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/netflix_black</item>
        <item name="colorSecondaryVariant">@color/netflix_black</item>
        <item name="colorOnSecondary">@color/netflix_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/netflix_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>